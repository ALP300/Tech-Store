@model TechStore.Models.Producto
@{
    ViewData["Title"] = "Por favor, crea un producto";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Nom" class="control-label">Nombre del producto:</label><br><br>
            <input asp-for="Nom" class="form-control" required />
            <div class="invalid-feedback">Por favor ingrese un nombre válido.</div>
        </div><br><br>
        <div class="form-group">
            <label asp-for="Descrip" class="control-label">Descripción del producto:</label>
            <textarea asp-for="Descrip" class="form-control" rows="3" required></textarea>
            <div class="invalid-feedback">Por favor ingrese una descripción válida.</div>
        </div><br><br>
        <div class="form-group">
            <label asp-for="Precio" class="control-label">Precio del producto:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input asp-for="Precio" class="form-control" required />
                <div class="invalid-feedback">Por favor ingrese un precio válido.</div>
            </div>
        </div><br><br><br>
        <button type="submit" class="btn btn-primary">Crear Producto</button><br> <br><br>
    </form>

    <div class="mt-3">
        <h1>@ViewData["Message"]</h1>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
